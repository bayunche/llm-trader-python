# 应用环境配置示例
APP_ENV=development
LOG_LEVEL=INFO
LOG_JSON=false

# 数据存储目录与分区模板
DATA_STORE_DIR=data_store
DATA_PARQUET_PARTITION_TEMPLATE=freq/symbol/%Y%m

# 数据库与缓存配置
DATABASE_URL=sqlite:///llm_trader.db
DATABASE_ECHO=false
REDIS_ENABLED=false
REDIS_URL=redis://localhost:6379/0
REDIS_DECODE_RESPONSES=false

# API 服务配置
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
API_DOCS_ENABLED=true

# 统一入口与调度配置
LLM_TRADER_SCHEDULER_CONFIG=config/scheduler.prod.json
LLM_TRADER_SKIP_INITIAL_PIPELINE=0
SCHEDULER_ENABLED=true
SCHEDULER_TIMEZONE=Asia/Shanghai
SCHEDULER_MAX_WORKERS=4

# LLM / API Key
OPENAI_API_KEY=
LLM_TRADER_API_KEY=
LLM_TRADER_RATE_LIMIT=60

# 风控阈值
RISK_MAX_EQUITY_DRAWDOWN=0.1
RISK_MAX_POSITION_RATIO=0.3
RISK_ALERT_CHANNEL=log
RISK_MAX_EQUITY_VOLATILITY=0.12
RISK_MAX_SECTOR_EXPOSURE=0.4
RISK_MAX_HOLDING_DAYS=20

# 交易默认配置
TRADING_SESSION=session-demo
TRADING_STRATEGY=strategy-demo
# TRADING_SYMBOLS 为候选池，可使用逗号分隔多个标的；留空则自动按流动性选股
TRADING_SYMBOLS=
TRADING_OBJECTIVE=自动交易
TRADING_FREQ=D
TRADING_INDICATORS=sma,ema
TRADING_INITIAL_CASH=1000000
TRADING_LOOKBACK_DAYS=120
TRADING_LLM_MODEL=gpt-4.1-mini
# TRADING_LLM_BASE_URL 指向 OpenAI 兼容接口（留空使用默认）
TRADING_LLM_BASE_URL=
TRADING_ONLY_LATEST=true
TRADING_SCHEDULER_INTERVAL=5
TRADING_RUN_BACKTEST=true
TRADING_BACKTEST_MIN_RETURN=0.0
TRADING_BACKTEST_MAX_DRAWDOWN=0.2
TRADING_SYMBOL_UNIVERSE_LIMIT=200
TRADING_OBSERVATION_TTL_MS=3000
# 选股指标，可选 amount（成交额）、volume（成交量）、turnover_rate 等
TRADING_SELECTION_METRIC=amount
# 交易执行模式：sandbox（沙盒撮合）或 live（实盘执行）
# !!! 警告：live 模式仅为占位实现，尚未接入真实券商接口，请勿在生产环境启用 !!!
TRADING_EXECUTION_MODE=sandbox
# 报表输出目录（相对路径或绝对路径）
REPORT_OUTPUT_DIR=reports
DASHBOARD_PORT=8501
# 实盘执行配置（默认使用 mock，接入券商时需改写）
TRADING_BROKER_PROVIDER=mock
TRADING_BROKER_ACCOUNT=demo-account
TRADING_BROKER_BASE_URL=
TRADING_BROKER_API_KEY=
# 告警渠道（log/stdout/stderr）
MONITORING_ALERT_CHANNEL=log
